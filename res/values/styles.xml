<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="listItemAdd">
	<item name="android:layout_width">fill_parent</item>
	<item name="android:layout_height">fill_parent</item>
	<item name="android:gravity">center</item>
	<item name="android:paddingTop">10dip</item>
	<item name="android:paddingBottom">10dip</item>
	<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
	<item name="android:background">@android:drawable/menuitem_background</item>
	<item name="android:focusable">true</item>
	<item name="android:clickable">true</item>
  </style>

  <style name="listItem">
	<item name="android:layout_width">fill_parent</item>
	<item name="android:layout_height">wrap_content</item>
	<item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
	<item name="android:gravity">center_vertical</item>
	<item name="android:paddingRight">?android:attr/scrollbarSize</item>
	<item name="android:background">@android:drawable/menuitem_background</item>
  </style>

  <style name="listItemTexts">
	<item name="android:layout_width">wrap_content</item>
	<item name="android:layout_height">wrap_content</item>
	<item name="android:paddingLeft">15dip</item>
	<item name="android:paddingRight">6dip</item>
	<item name="android:paddingTop">6dip</item>
	<item name="android:paddingBottom">6dip</item>
	<item name="android:layout_weight">1</item>
  </style>

  <style name="listItemTitle">
	<item name="android:layout_width">wrap_content</item>
	<item name="android:layout_height">wrap_content</item>
	<item name="android:singleLine">true</item>
	<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
	<item name="android:ellipsize">marquee</item>
	<item name="android:fadingEdge">horizontal</item>
  </style>

  <style name="listItemSummary">
	<item name="android:layout_width">wrap_content</item>
	<item name="android:layout_height">wrap_content</item>
	<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
  </style>

  <style name="listItemCheckbox">
	<item name="android:layout_width">wrap_content</item>
	<item name="android:layout_height">fill_parent</item>
	<item name="android:layout_marginRight">4dip</item>
	<item name="android:layout_gravity">center_vertical</item>
	<item name="android:focusable">false</item>
	<item name="android:clickable">false</item>
  </style>

  <style name="dialogEditText">
	<item name="android:layout_width">wrap_content</item>
	<item name="android:layout_height">wrap_content</item>
	<item name="android:padding">5dip</item>
	<item name="android:orientation">vertical</item>
  </style>

  <style name="dialogEditTextContent">
	<item name="android:layout_width">fill_parent</item>
	<item name="android:layout_height">wrap_content</item>
	<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	<item name="android:singleLine">true</item>
  </style>

  <style name="dialogEditNumberContent"
		 parent="dialogEditTextContent">
	<item name="android:numeric">integer</item>
	<item name="android:inputType">number</item>
  </style>

  <style name="dialogEditAddressContent"
		 parent="dialogEditTextContent">
	<item name="android:inputType">textEmailAddress</item>
  </style>

</resources>
